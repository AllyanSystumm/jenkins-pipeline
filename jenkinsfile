pipeline {
    agent any
    environment {
        HOME = '/home/ubuntu'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/username/repository.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    sh 'npm run build'  // Adjust according to your build command
                }
            }
        }
        stage('Run Application') {
            steps {
                script {
                    sh 'nohup npm start &'
                }
            }
        }
    }
    post {
        always {
            echo 'Cleaning up...'
            sh 'rm -rf node_modules'
        }
    }
}

